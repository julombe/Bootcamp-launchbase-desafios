{% extends "layout.njk" %}



{% block content %}

<form class="card" method="POST" action="/teachers">
    <section class="avatar"
    style="background: url(https://source.unsplash.com/collection/1603248/500x500) no-repeat center center /cover"></section>

    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input type="url" name="avatar_url" placeholder="http://">
            </div>
        </div>

        <div class="item">
            <div>Nome</div>
            <div>
                <input type="text" name="name" placeholder="Nome do professor">
            </div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <div>Licenciado</div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            <div>
                <span>Matemática</span>
                <span>Física</span>
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>01/01/2020</div>
        </div>

    </section>
</form>
    
{% endblock content %}