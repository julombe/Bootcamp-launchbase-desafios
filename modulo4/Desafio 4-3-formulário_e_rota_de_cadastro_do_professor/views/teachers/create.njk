{% extends "layout.njk" %}



{% block content %}

<form class="card" method="POST" action="/teachers">
    <section class="avatar"
    style="background: url(https://source.unsplash.com/collection/1603248/500x500) no-repeat center center /cover"></section>

    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input type="url" name="avatar_url" placeholder="http://">
            </div>
        </div>

        <div class="item">
            <div>Nome</div>
            <div>
                <input type="text" name="name" placeholder="Nome do professor">
            </div>
        </div>

         <div class="item">
            <div>Data de Nascimento</div>
            <div>
                <input type="date" name="birth">
            </div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <div>
                <select name="select" class="select-css">
                    <option value="middle">Ensino Médio Completo</option>
                    <option value="Ensino superior completo">Ensino Superior Completo</option>
                    <option value="Mestrado e Doutorado">Mestrado e Doutorado</option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de Aula</div>
            <div>
                <span><input type="radio" name="type_of_class" checked> Presencial</span>
                <span><input type="radio" name="type_of_class"> À distância</span>
            </div>
        </div>

         <div class="item">
            <div>Área de actuação</div>
            <div>
                <input type="text" name="services" placeholder="separe as matérias que leciona por vírgulas">
            </div>
        </div>

       <!-- <div class="item">
            <div>Desde</div>
            <div>01/01/2020</div>
        </div>-->

        <button type="submit">Enviar</button>

    </section>
</form>
    
{% endblock content %}