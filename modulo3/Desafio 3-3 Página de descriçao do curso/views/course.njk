{% extends "layout.njk" %}

 {% block head %}
    <title>Cursos</title>     
 {% endblock %}

{% block content %}


    <div id="wrapper">
           <h1>Cursos</h1>
    </div>

    <section class="cards">
       <div class="card" id="{{item.id}}">
           <span class="card__number">
               01
           </span>
        <div class="card__image-container">
        <img src="{{item.img}}" alt="Logo Curso starter">
    </div>

    <div class="card__content">
        <p>{{item.description}}</p>
    </div>

    <div class="card__info">
        <p>{{item.module}}</p>
        <p class="card__price">{{item.price}}</p>   
    </div>
       </div>
    
   </section>
   
    
{% endblock %}