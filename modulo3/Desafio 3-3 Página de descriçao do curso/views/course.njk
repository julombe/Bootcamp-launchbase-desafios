{% extends "layout.njk" %}

 {% block head %}
    <title>Cursos</title>     
 {% endblock %}

{% block content %}


    <div id="wrapper">
           <h1>{{Cursos}}</h1>
    </div>

    <section class="course">
       <div class="card" id="{{item.id}}">
           <span class="card__number">
               01
           </span>
        <div class="card__course-container">
            <iframe src="https://app.rocketseat.com.br/embed/{{item.id}}" frameborder="0"></iframe>

        <img src="{{item.img_url}}" alt="{{item.id}}">
    </div>

    <div class="card__content">
        <p>{{item.description}}</p>
    </div>

    <div class="card__info">
        <p>{{item.module}}</p>
        <p class="card__price">{{item.price}}</p>   
    </div>
       </div>
    
   </section>
   
    
{% endblock %}