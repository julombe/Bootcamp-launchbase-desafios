{% extends "layout.njk" %}

 {% block head %}
    <title>{{item.id}}</title>   
    <link rel="stylesheet" href="/page-course.css">  
 {% endblock %}

{% block content %}


    <div id="wrapper">
           <h1>{{item.id}}</h1>
    </div>

    <section class="course">
       <div class="card_course" id="{{item.id}}">
           <span class="card__number_course">
               01
           </span>
        <div class="card__course-container">
            <!--<iframe src="https://app.rocketseat.com.br/{{item.id}}" frameborder="0"></iframe>-->

        <img src="{{item.img_url}}" alt="{{item.id}}">
    </div>

    <div class="card__content_course">
        <p>{{item.description}}</p>
    </div>

    <div class="card__info_course">
        <p>{{item.module}}</p>
        <p class="card__price_course">{{item.price}}</p>   
    </div>
       </div>
   </section> 
{% endblock %}